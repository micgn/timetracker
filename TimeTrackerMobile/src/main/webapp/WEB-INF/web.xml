<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    
    <env-entry> 
        <env-entry-name>resturl</env-entry-name>
        <env-entry-value>http://localhost.localdomain:8080/timetracker-1.0.0-SNAPSHOT/rest</env-entry-value>
        <env-entry-type>java.lang.String</env-entry-type>
    </env-entry>

    <!-- Default page to serve -->
    <welcome-file-list>
        <welcome-file>ttjs.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>load</servlet-name>
        <servlet-class>de.mg.ttjs.server.LoadServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>save</servlet-name>
        <servlet-class>de.mg.ttjs.server.SaveServiceImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>load</servlet-name>
        <url-pattern>/ttjs/service/load</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>save</servlet-name>
        <url-pattern>/ttjs/service/save</url-pattern>
    </servlet-mapping>
        
    <security-role>
        <role-name>ttjs</role-name>
    </security-role>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>
                Entire Application
            </web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ttjs</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>TTJS</realm-name>
    </login-config>

</web-app>
